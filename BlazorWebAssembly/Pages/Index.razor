@page "/"
@using ChartJs.Blazor.PieChart



<PageTitle>Index</PageTitle>

<MudAppBar Fixed="false" Style="@($"color: black; background: white;")" Elevation="0" class="bar">
    <MudGrid Spacing="7">
        <MudItem Style="@($"padding: 25px;")"><img src="img/logo.png" class="logo"/></MudItem>
        <MudItem><a href="#">Work</a></MudItem>
        <MudItem><a href="#">Profile</a></MudItem>
        <MudItem><a href="#">Shop</a></MudItem>
    </MudGrid>
    <MudSpacer />
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" />
</MudAppBar>

<MudCarousel Style="height:93vh;" ShowArrows="@arrows" ShowBullets="@bullets" EnableSwipeGesture="@enableSwipeGesture" AutoCycle="@autocycle" TData="object">
    <MudCarouselItem Class="d-flex" Transition="transition" Color="@Color.Secondary">
        <img class="box" src="img/Nissan1.jpg" />
    </MudCarouselItem>
    <MudCarouselItem Class="d-flex" Transition="transition" Color="@Color.Secondary">
        <img class="box" src="img/Nissan2.jpg" />
    </MudCarouselItem>
    <MudCarouselItem Class="d-flex" Transition="transition" Color="@Color.Secondary">
        <img class="box" src="img/Nissan3.jpg" />
    </MudCarouselItem>
</MudCarousel>


<div class="text">
    <h1>car <br />experience</h1>

    <p>
        Pawel Nolbert is a color artist,<br/>
        specialized in creating visually rich imagery.
    </p>

    <p>
        Design, Art, Brands
    </p>
</div>

<div class="container">

    <div class="box-grid">

        <div class="content-grid">
            <img src="img/Nissan1.jpg"/><div>Nissan Skyline R34</div>
        </div>
        <div class="content-grid">
            <img src="img/Toyota2.jpg" /><div>Toyota Supra</div>
        </div>
        <div class="content-grid">
            <img src="img/audi.jpg" style="object-position: bottom;"/><div>Audi R8</div>
        </div>
        <div class="content-grid">
            <img src="img/Toyota1.jpg" /><div>Toyota Supra</div>
        </div>
        <div class="content-grid">
            <img src="img/Nissan2.jpg" /><div>Nissan Skyline R34</div>
        </div>
        <div class="content-grid">
            <img src="img/Nissan3.jpg" /><div>Nissan Sklyine R34</div>
        </div>
        <div class="content-grid">
            <img src="img/alpine.jpg" /><div>Alpine A110</div>
        </div>
        <div class="content-grid">
            <img src="img/jeep.jpg" /><div>Jeep Wrangler</div>
        </div>
        <div class="content-grid">
            <img src="img/ferrari.jpg" /><div>Ferrari interior</div>
        </div>

    </div>

</div>

<CarChart></CarChart>

<MudScrollToTop>
    <MudFab Icon="@Icons.Filled.KeyboardArrowUp" IconSize="Size.Large" Color="Color.Secondary"/>
</MudScrollToTop>

<footer>
    Copyright © 2022 CarsWorld Inc. All Rights Reserved.
</footer>




@code {
    private bool arrows = false;
    private bool bullets = false;
    private bool enableSwipeGesture = true;
    private bool autocycle = true;
    private Transition transition = Transition.Slide;
  
}